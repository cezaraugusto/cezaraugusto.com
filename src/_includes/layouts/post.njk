{% extends 'layouts/default.njk' %}

{% block main %}
  <article class="content">
    <header class="header">
      <time class="date">{{ date | date_formatted }}</time>
      <h1>
        {% if link -%}
          <a rel="external" href="{{ link | safe }}">{{ title }}</a>
        {%- else -%}
          {{ title }}
        {%- endif %}
      </h1>
      <aside class="share-on">
        <span>Share on</span>
        <a href="https://twitter.com/intent/tweet?text={{ title | space_safe }}&url={{ site.url }}/posts/{{ page.fileSlug }}&via={{ site.owner | space_safe }}" target="_blank" class="twitter">Twitter</a> &#9642; 
        <a id="copyLink" href="{{ slug | safe }}">Copy this post's link</a>
        <span class="clipboard tooltip">Copied!</span>
      </aside>
      <hr>
      {% if description -%}
        <p class="description">{{ description }}</p>
      {%- endif -%}
    {% if image -%}
    <figure>
      <img
        src="{{ image }}"
        alt="{{ alt }}"
      />
      {% if caption -%}
        <figcaption>{{caption}}</figcaption>
      {%- endif %}
    </figure>
    {%- endif %}
    </header>
    {{ content | safe }}
    {% if link -%}
      <hr>
      <a rel="external" href="{{ link | safe }}">View Link</a>
    {%- endif %}
    {% include "components/bio.njk" %}
    {% include "components/share.njk" %}
  </article>
  <!-- this resource is cached with SW -->
  <script async src="/assets/js/twitter-widget.js" charset="utf-8"></script>
{% endblock %}
