{% extends 'layouts/default.njk' %}

{% block main %}
<main id="main-content" tabindex="-1">
  <article>
    <header class="content-meta">
      <!-- Show dates only for posts -->
      <div class="share">
        <time class="date">{{ date | date_formatted }}</time> | 
        <span>
          Share on 
          <a href="https://twitter.com/intent/tweet?text={{ title | space_safe }}&url={{ site.url }}/posts/{{ page.fileSlug }}&via={{ site.owner | space_safe }}" target="_blank" class="twitter">Twitter</a> &#9642; 
          <a id="copyLink" href="{{ slug | safe }}">
            Copy this post's link
            <span class="clipboard tooltip">Copied!</span>
          </a>
        </span>
      </div>
      <h1 id="title">
        {{ title }}
      </h1>
    {% if image -%}
    <figure>
      <img
        src="{{ image }}"
        alt="{{ alt }}"
      />
      {% if caption -%}
        <figcaption>{{caption}}</figcaption>
      {%- endif %}
    </figure>
    {%- endif %}
    </header>
    <div class="content">
      {{ content | safe }}
    </div>
  </article>
</main>
<!-- this resource is cached with SW -->
<script async src="/assets/js/twitter-widget.js" charset="utf-8"></script>
{% endblock %}
