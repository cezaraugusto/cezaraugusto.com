{% extends 'layouts/default.njk' %} {% block main %}
<main id="main-content" tabindex="-1">
  <article>
    <header>
      <h1>{{ title }}</h1>
      {% if description %}
      <p>{{ description | markdownify_inline | safe }}</p>
      {% endif %} {% if image -%}
      <figure>
        {% if image -%}<img src="{{ image }}" alt="{{ alt }}" />{%- endif %} {%
        if caption -%}
        <figcaption>{{caption}}</figcaption>
        {%- endif %}
      </figure>
      {%- endif %}
    </header>
    <hr class="cs-hr" />
    <div class="prose">{{ content | markdownify | safe }}</div>
  </article>
</main>
{% endblock %}
