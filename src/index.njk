---
heading: true
permalink: /index.html
---
{% extends 'layouts/default.njk' %}

{% block pageTop %}
  <header class="presentation">
    <img src='/assets/images/avatar.jpeg' alt='Picture of Cezar Augusto'>
    <h1>
      <mark>{{ site.topHeadline | markdownify_inline | safe }}</mark><br>
      {{ site.bottomHeadline | markdownify_inline | safe }}
    </h1>
    <p>
      {{ site.intro | markdownify_inline | safe }}<br>
      {{ site.social | markdownify_inline | safe }}
    </p>
    <div class="glare"></div>
  </header>
{% endblock %}

{% block main %}
  <iframe
    src="https://cezaraugusto.substack.com/embed"
    width="480"
    height="320"
    style="border:1px solid #EEE; background:white;"
    frameborder="0"
    scrolling="no">
  </iframe>
  <main id="main-content" tabindex="-1">
    <section>
      <h2>Blog</h2>
      <ul class="big-links">
        {% for entry in collections.latestPosts %}
        <li>
          <a href="{{ entry.url | permalink }}">{{ entry.data.title }}</a>
          <p>on <time>{{ entry.date | date_formatted }}</time></p>
        </li>
        {% endfor %}
      </ul>
    </section>
    <section>
      <h2>Projects</h2>
      <ol id="projects" class="big-links">
        <p class="center">(Loading...)</p>
      </ol>
    </section>
  </main>
{% endblock %}

{% block footer %}
{% endblock %}
